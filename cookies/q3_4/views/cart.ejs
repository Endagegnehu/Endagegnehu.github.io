<!DOCTYPE html>
<html lang="en-us">
    <head>
        <meta charset="utf-8">
        <title>Cart</title>
        <style>
            table,tr,td{
                border: solid 1px black;
            }
        </style>
    </head>
    <body>
        <table>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
            <% for(let item in cart.getAll()){ %>
                <tr>
                    <td><%= cart.getAll()[item].getName() %></td>
                    <td><%= cart.getAll()[item].getPrice() %>$</td>
                    <td><%=  cart.getAll()[item].getQuantity() %></td>
                </tr>   
            <% } %>
        </table>
    </body>
</html>